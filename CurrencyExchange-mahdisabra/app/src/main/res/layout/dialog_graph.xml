<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jjoe64.graphview.GraphView
        android:layout_width = "match_parent"
        android:layout_height = "200dip"
        android:id = "@+id/graph"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="Sell Usd Rate"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/graph"
        app:layout_constraintRight_toLeftOf="@id/buy"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/sell_color"
        android:background="#03A9F4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="   "
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/graph"
        app:layout_constraintLeft_toRightOf="@id/sell"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="Buy Usd Rate"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/graph"
        app:layout_constraintLeft_toRightOf="@id/sell_color"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/buy_color"
        android:background="#3F51B5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="   "
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/graph"
        app:layout_constraintLeft_toRightOf="@id/buy"/>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/stat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="statistic 1"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/buy"
        app:layout_constraintLeft_toRightOf="@id/sell_color"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/stat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="statistic 2"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/sell"
        app:layout_constraintRight_toLeftOf="@id/buy"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/stat3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="statistic 3"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/stat1"
        app:layout_constraintLeft_toRightOf="@id/sell_color"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/stat4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="statistic 4"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/stat2"
        app:layout_constraintRight_toLeftOf="@id/buy"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/stat5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="statistic 5"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/stat3"
        app:layout_constraintLeft_toRightOf="@id/sell_color"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/stat6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="statistic 6"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/stat4"
        app:layout_constraintRight_toLeftOf="@id/buy"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/stat7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="statistic 7"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/stat5"
        app:layout_constraintLeft_toRightOf="@id/sell_color"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/stat8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="statistic 8"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/stat6"
        app:layout_constraintRight_toLeftOf="@id/buy"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>